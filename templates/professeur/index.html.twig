{% extends 'base.html.twig' %}

{% block title %}Professeur index{% endblock %}

{% block body %}
    <h1>Professeur index</h1>

    <table class="table">
        <thead>
            <tr>
              
                <th>Fullname</th>
                <th>Tel</th>
                <th>Cin</th>
                <th>Email</th>
                <th>classes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for professeur in professeurs %}
            <tr>
             
                <td>{{ professeur.fullname }}</td>
                <td>{{ professeur.tel }}</td>
                <td>{{ professeur.cin }}</td>
                <td>{{ professeur.email }}</td>
                <td>
                {% for classes in professeur.classes %}
                 <li>{{ classes.name_classe }}</li>
                {% endfor %}
                </td>
                <td>
                    <a class="genric-btn info" href="{{ path('professeur_show', {'id': professeur.id}) }}">show</a>
                    <a class="genric-btn primary" href="{{ path('professeur_edit', {'id': professeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('professeur_new') }}">Create new</a>
{% endblock %}
