{% extends 'base.html.twig' %}

{% block title %}Matiere index{% endblock %}

{% block body %}
    <h1>Matiere index</h1>

    <table class="table">
        <thead>
            <tr>
               
                <th>Name</th>
                 <th>Classe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matiere in matieres %}
            <tr>
               
                <td>{{ matiere.name }}</td>
                <td>{{ matiere.classe }}</td>
                <td>
                    <a class="genric-btn info" href="{{ path('matiere_show', {'id': matiere.id}) }}">show</a>
                      {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <a class="genric-btn primary" href="{{ path('matiere_edit', {'id': matiere.id}) }}">edit</a>
                      {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  {% if is_granted('ROLE_SUPER_ADMIN') %}
    <a class="btn btn-primary" href="{{ path('matiere_new') }}">Create new</a>
    {% endif %}
{% endblock %}
