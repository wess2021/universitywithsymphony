{% extends 'base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block body %}
    <h1>Classe</h1>

    <table class="table">
        <tbody>
           
            <tr>
                <th>Name_classe</th>
                <td>{{ classe.nameClasse }}</td>
                <td>
                <th>matieres</th>
                <td>
               {% for matieres in classe.matieres %}
                 <li>{{ matieres.name }}</li>
                {% endfor %}
                </td>
                </td>
                <td>
                <th>professeurs</th>
                <td>
               {% for professeurs in classe.professeurs %}
                 <li>{{ professeurs.fullname }}</li>
                {% endfor %}
                </td>
                </td>
            </tr>
            
        </tbody>
    </table>

    <a class="genric-btn info"  href="{{ path('classe_index') }}">back to list</a>
{% if is_granted('ROLE_SUPER_ADMIN') %}
    <a class="genric-btn primary" href="{{ path('classe_edit', {'id': classe.id}) }}">edit</a>

    {{ include('classe/_delete_form.html.twig') }}
  {% endif %}  
{% endblock %}
