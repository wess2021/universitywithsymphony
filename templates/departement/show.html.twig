{% extends 'base.html.twig' %}

{% block title %}Departement{% endblock %}

{% block body %}
    <h1>Departement</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Name</th>
                <td>{{ departement.name }}</td>
                <th>classes</th>
                <td>
               {% for classes in departement.classes %}
                 <li>{{ classes.name_classe }}</li>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="genric-btn info" href="{{ path('departement_index') }}">back to list</a>
    {% if is_granted('ROLE_SUPER_ADMIN') %}

    <a class="genric-btn primary" href="{{ path('departement_edit', {'id': departement.id}) }}">edit</a>

    {{ include('departement/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
