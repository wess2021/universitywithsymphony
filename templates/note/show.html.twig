{% extends 'base.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
    <h1>Note</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Title</th>
                <td>{{ note.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ note.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ note.date ? note.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td><a href="{{asset('uploads/')}}{{note.fichier}}" class="genric-btn primary-border small" >{{note.fichier}}</a></td>
            </tr>
        </tbody>
    </table>

    <a class="genric-btn info" href="{{ path('note_index') }}">back to list</a>
 {% if is_granted('ROLE_SUPER_ADMIN') %}
    <a class="genric-btn primary" href="{{ path('note_edit', {'id': note.id}) }}">edit</a>
{% endif %}
{% if is_granted('ROLE_SUPER_ADMIN') %}
    {{ include('note/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
